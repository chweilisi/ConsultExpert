<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin">

    <LinearLayout
        android:id="@+id/question_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/list_selector"
        android:visibility="visible">

        <com.cheng.consultexpert.widget.CircularImage
            android:id="@+id/ivQuestionSubject"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_question"/>

        <TextView
            android:id="@+id/tvQuestionDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:padding="5dp"
            android:maxLines="4"
            android:text="问题内容示例"
            android:textColor="@color/secondary_text"
            android:scrollbars="vertical"
            android:textSize="@dimen/sn_16sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/answer_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/list_selector"
        android:visibility="visible">

        <com.cheng.consultexpert.widget.CircularImage
            android:id="@+id/ivAnswerSubject"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_answer"/>

        <TextView
            android:id="@+id/tvAnswerDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:gravity="right"
            android:padding="5dp"
            android:maxLines="4"
            android:text="回答内容示例"
            android:textColor="@color/colorPrimary"
            android:scrollbars="vertical"
            android:textSize="@dimen/sn_16sp"/>

    </LinearLayout>
</LinearLayout>
