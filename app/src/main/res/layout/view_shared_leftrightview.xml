<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/leftrightview_icon_contianer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp" >

        <ImageView
            android:id="@+id/leftrightview_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_arrow_icon"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/leftrightview_icon_contianer" >

        <TextView
            android:id="@+id/leftrightview_right_text"
            style="@style/TextNormalTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/leftrightview_left_text"
            android:background="@null"
            android:drawablePadding="15dp"
            android:gravity="right"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#FF6A6A6A"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/leftrightview_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:drawablePadding="15dp"
            android:gravity="center|left"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="#131313"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/leftrightview_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/common_f0f0f0" />

</RelativeLayout>