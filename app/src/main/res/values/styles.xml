<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:listDivider">@drawable/customer_divider_line</item>
    </style>

    <style name="TextNormalTheme">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <declare-styleable name="LeftRightView">
        <attr name="viewIcon" format="reference" />
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="showDivider" format="boolean" />
        <attr name="showIcon" format="boolean" />
        <attr name="leftButtonDrawable" format="reference" />
        <attr name="rightButtonDrawable" format="reference" />
        <attr name="dividerMarginLeft" format="dimension" />
        <attr name="leftTextTranslationX" format="dimension" />
    </declare-styleable>

    <style name="AppTheme2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginTextView">
        <item name="android:textColor">@color/color_title_explanation</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="LoginEditText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/edittext_input_text</item>
        <item name="android:textColorHint">@color/edittext_hint_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="DatePicker" parent="AppTheme2">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textSize">16sp</item>
    </style>

</resources>
